<aside class="sidebar" id="sidebar">
  <div class="sidebar-header">
    <div class="logo">
      <% if (typeof tenant !== 'undefined' && tenant && tenant.logo_url) { %>
        <img src="<%= tenant.logo_url %>" alt="<%= tenant.name %>" class="logo-img">
      <% } else { %>
        <div class="logo-icon" <% if (typeof tenant !== 'undefined' && tenant && tenant.brand_color && tenant.brand_color !== '#6366f1') { %>style="background:<%= tenant.brand_color %>"<% } %>><%= (typeof tenant !== 'undefined' && tenant && tenant.name) ? tenant.name.charAt(0).toUpperCase() : 'P' %></div>
      <% } %>
      <span class="logo-text"><%= (typeof tenant !== 'undefined' && tenant && tenant.name) ? tenant.name : 'ProjectHub' %></span>
    </div>
    <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
    </button>
  </div>

  <nav class="sidebar-nav">
    <% if (user.role === 'admin') { %>
      <div class="nav-section">
        <span class="nav-label"><%= t.nav_administration %></span>
        <a href="/admin" class="nav-item <%= currentPath === '/admin' ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="7" height="7" rx="1"/><rect x="14" y="3" width="7" height="7" rx="1"/><rect x="3" y="14" width="7" height="7" rx="1"/><rect x="14" y="14" width="7" height="7" rx="1"/></svg>
          <span><%= t.nav_dashboard %></span>
        </a>
        <a href="/admin/users" class="nav-item <%= currentPath === '/admin/users' ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
          <span><%= t.nav_users %></span>
        </a>
        <a href="/admin/companies" class="nav-item <%= currentPath === '/admin/companies' ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
          <span>Entreprises</span>
        </a>
        <a href="/admin/settings" class="nav-item <%= currentPath === '/admin/settings' ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
          <span>Paramètres</span>
        </a>
      </div>
      <div class="nav-divider"></div>
    <% } %>

    <% if (user.role === 'admin' || user.role === 'developer') { %>
      <div class="nav-section">
        <span class="nav-label"><%= t.nav_development %></span>
        <a href="/projects" class="nav-item <%= currentPath.startsWith('/projects') ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/></svg>
          <span><%= t.nav_projects %></span>
        </a>
      </div>
    <% } %>

    <% if (user.role === 'admin') { %><div class="nav-divider"></div><% } %>

    <% if (user.role === 'admin' || user.role === 'support') { %>
      <div class="nav-section">
        <span class="nav-label"><%= t.nav_support %></span>
        <a href="/tickets" class="nav-item <%= currentPath === '/tickets' ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 5v2"/><path d="M15 11v2"/><path d="M15 17v2"/><path d="M5 5h14a2 2 0 0 1 2 2v3a2 2 0 0 0 0 4v3a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-3a2 2 0 0 0 0-4V7a2 2 0 0 1 2-2z"/></svg>
          <span><%= t.nav_tickets %></span>
        </a>
        <a href="/tickets/new" class="nav-item <%= currentPath === '/tickets/new' ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 8v8"/><path d="M8 12h8"/></svg>
          <span><%= t.nav_new_ticket %></span>
        </a>
        <a href="/admin/articles" class="nav-item <%= currentPath.startsWith('/admin/articles') ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
          <span><%= t.nav_articles %></span>
        </a>
      </div>
    <% } %>

    <div class="nav-divider"></div>
    <div class="nav-section">
      <span class="nav-label"><%= t.nav_knowledge %></span>
      <a href="/admin/knowledge" class="nav-item <%= currentPath.startsWith('/admin/knowledge') ? 'active' : '' %>">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
        <span><%= t.nav_knowledge %></span>
      </a>
      <a href="/help" target="_blank" class="nav-item">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/><path d="M12 17h.01"/></svg>
        <span><%= t.nav_help_center %></span>
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-left:auto;opacity:0.5"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
      </a>
    </div>
  </nav>

  <% if (typeof trialDaysLeft !== 'undefined' && trialDaysLeft >= 0) { %>
    <div class="trial-sidebar-banner">
      <div class="trial-banner-icon">⏳</div>
      <div class="trial-banner-text">
        <strong><%= t.trial_banner_title || 'Essai gratuit' %></strong>
        <span><%= trialDaysLeft %> <%= t.trial_banner_days || 'jour(s) restant(s)' %></span>
      </div>
    </div>
  <% } %>

  <div class="sidebar-footer">
    <div class="user-card">
      <div class="avatar" style="background-color: <%= user.avatar_color %>"><%= user.full_name.charAt(0) %></div>
      <div class="user-info">
        <div class="user-name"><%= user.full_name %></div>
        <div class="user-role"><%= user.role === 'admin' ? t.role_admin : user.role === 'developer' ? t.role_developer_short : t.role_support %></div>
      </div>
    </div>
    <a href="/logout" class="logout-btn" title="<%= t.logout %>">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
    </a>
  </div>
</aside>
<div class="sidebar-overlay" onclick="toggleSidebar()"></div>
