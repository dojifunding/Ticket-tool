<aside class="sidebar" id="sidebar">
  <div class="sidebar-header">
    <div class="logo">
      <div class="logo-icon">P</div>
      <span class="logo-text">ProjectHub</span>
    </div>
    <button class="sidebar-toggle" onclick="toggleSidebar()" aria-label="Toggle sidebar">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
    </button>
  </div>

  <nav class="sidebar-nav">
    <% if (user.role === 'admin') { %>
      <div class="nav-section">
        <span class="nav-label"><%= t.nav_administration %></span>
        <a href="/admin" class="nav-item <%= currentPath === '/admin' ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="7" height="7" rx="1"/><rect x="14" y="3" width="7" height="7" rx="1"/><rect x="3" y="14" width="7" height="7" rx="1"/><rect x="14" y="14" width="7" height="7" rx="1"/></svg>
          <span><%= t.nav_dashboard %></span>
        </a>
        <a href="/admin/users" class="nav-item <%= currentPath === '/admin/users' ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
          <span><%= t.nav_users %></span>
        </a>
      </div>
      <div class="nav-divider"></div>
    <% } %>

    <% if (user.role === 'admin' || user.role === 'developer') { %>
      <div class="nav-section">
        <span class="nav-label"><%= t.nav_development %></span>
        <a href="/projects" class="nav-item <%= currentPath.startsWith('/projects') ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/></svg>
          <span><%= t.nav_projects %></span>
        </a>
      </div>
    <% } %>

    <% if (user.role === 'admin') { %><div class="nav-divider"></div><% } %>

    <% if (user.role === 'admin' || user.role === 'support') { %>
      <div class="nav-section">
        <span class="nav-label"><%= t.nav_support %></span>
        <a href="/tickets" class="nav-item <%= currentPath === '/tickets' ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 5v2"/><path d="M15 11v2"/><path d="M15 17v2"/><path d="M5 5h14a2 2 0 0 1 2 2v3a2 2 0 0 0 0 4v3a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-3a2 2 0 0 0 0-4V7a2 2 0 0 1 2-2z"/></svg>
          <span><%= t.nav_tickets %></span>
        </a>
        <a href="/tickets/new" class="nav-item <%= currentPath === '/tickets/new' ? 'active' : '' %>">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 8v8"/><path d="M8 12h8"/></svg>
          <span><%= t.nav_new_ticket %></span>
        </a>
      </div>
    <% } %>
  </nav>

  <div class="sidebar-footer">
    <div class="user-card">
      <div class="avatar" style="background-color: <%= user.avatar_color %>"><%= user.full_name.charAt(0) %></div>
      <div class="user-info">
        <div class="user-name"><%= user.full_name %></div>
        <div class="user-role"><%= user.role === 'admin' ? t.role_admin : user.role === 'developer' ? t.role_developer_short : t.role_support %></div>
      </div>
    </div>
    <a href="/logout" class="logout-btn" title="<%= t.logout %>">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
    </a>
  </div>
</aside>
<div class="sidebar-overlay" onclick="toggleSidebar()"></div>
