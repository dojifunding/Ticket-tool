</head>
<body class="login-body">
  <div class="login-container">
    <div class="login-card register-card">
      <!-- Language Toggle -->
      <div class="lang-toggle-login">
        <a href="/lang/fr" class="lang-btn <%= t.lang === 'fr' ? 'active' : '' %>">ðŸ‡«ðŸ‡· FR</a>
        <a href="/lang/en" class="lang-btn <%= t.lang === 'en' ? 'active' : '' %>">ðŸ‡¬ðŸ‡§ EN</a>
      </div>

      <div class="login-header">
        <div class="logo-icon logo-icon-lg">P</div>
        <h1>ProjectHub</h1>
        <p><%= t.register_subtitle || 'DÃ©marrez votre essai gratuit de 7 jours' %></p>
      </div>

      <!-- Trial Badge -->
      <div class="trial-badge">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/></svg>
        <span><%= t.register_trial_info || '7 jours gratuits â€¢ Aucune carte bancaire requise â€¢ Annulable Ã  tout moment' %></span>
      </div>

      <% if (error) { %>
        <div class="alert alert-error">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></svg>
          <%= error %>
        </div>
      <% } %>

      <form method="POST" action="/register" class="login-form" id="registerForm">
        <div class="form-row">
          <div class="form-group">
            <label for="full_name"><%= t.register_fullname || 'Nom complet' %></label>
            <input type="text" id="full_name" name="full_name" required value="<%= values.full_name || '' %>" placeholder="<%= t.register_fullname_placeholder || 'Jean Dupont' %>">
          </div>
        </div>

        <div class="form-group">
          <label for="company_name"><%= t.register_company || 'Nom de l\'entreprise' %></label>
          <input type="text" id="company_name" name="company_name" required value="<%= values.company_name || '' %>" placeholder="<%= t.register_company_placeholder || 'Mon Entreprise SAS' %>">
        </div>

        <div class="form-group">
          <label for="email"><%= t.register_email || 'Email professionnel' %></label>
          <input type="email" id="email" name="email" required value="<%= values.email || '' %>" placeholder="<%= t.register_email_placeholder || 'jean@entreprise.com' %>">
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="password"><%= t.register_password || 'Mot de passe' %></label>
            <input type="password" id="password" name="password" required minlength="6" placeholder="<%= t.register_password_placeholder || 'Min. 6 caractÃ¨res' %>">
          </div>
          <div class="form-group">
            <label for="password_confirm"><%= t.register_password_confirm || 'Confirmer' %></label>
            <input type="password" id="password_confirm" name="password_confirm" required minlength="6" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢">
          </div>
        </div>

        <button type="submit" class="btn btn-primary btn-full" id="submitBtn">
          <span id="submitText"><%= t.register_submit || 'DÃ©marrer mon essai gratuit' %></span>
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </button>
      </form>

      <div class="register-footer">
        <p><%= t.register_has_account || 'DÃ©jÃ  un compte ?' %> <a href="/login"><%= t.register_login_link || 'Se connecter' %></a></p>
      </div>

      <!-- Features List -->
      <div class="trial-features">
        <div class="trial-feature">
          <span class="trial-feature-icon">ðŸŽ«</span>
          <span><%= t.register_feature_tickets || 'Ticketing & support client' %></span>
        </div>
        <div class="trial-feature">
          <span class="trial-feature-icon">ðŸ¤–</span>
          <span><%= t.register_feature_ai || 'IA intÃ©grÃ©e (FAQ, livechat, suggestions)' %></span>
        </div>
        <div class="trial-feature">
          <span class="trial-feature-icon">ðŸ“‹</span>
          <span><%= t.register_feature_projects || 'Gestion de projets Kanban' %></span>
        </div>
        <div class="trial-feature">
          <span class="trial-feature-icon">ðŸ’¬</span>
          <span><%= t.register_feature_livechat || 'Livechat pour votre site web' %></span>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('registerForm').addEventListener('submit', function() {
      const btn = document.getElementById('submitBtn');
      btn.disabled = true;
      btn.querySelector('#submitText').textContent = '<%= t.loading || "Chargement..." %>';
    });
  </script>
</body>
</html>
