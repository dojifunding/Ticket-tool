  <%- include('partials/head') %>
  <div class="error-page">
    <div class="error-code"><%= code %></div>
    <h1><%= title %></h1>
    <p><%= message %></p>
    <a href="/" class="btn btn-primary"><%= t.error_back_home %></a>
  </div>
  <%- include('partials/foot') %>
<% } else { %>
