<!DOCTYPE html>
<html lang="<%= t.lang %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= t.help_submit_title %> — ProjectHub</title>
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/help.css">
  <link rel="stylesheet" href="/css/livechat.css">
</head>
<body class="help-body">
  <nav class="help-nav">
    <div class="help-nav-inner">
      <a href="/help" class="help-logo">
        <div class="logo-icon">P</div>
        <span><%= t.help_title %></span>
      </a>
      <div class="help-nav-actions">
        <a href="/help/submit" class="btn btn-primary btn-sm"><%= t.help_submit_nav %></a>
        <div class="lang-toggle lang-toggle-multi">
          <a href="/lang/fr" class="lang-btn <%= t.lang === 'fr' ? 'active' : '' %>">FR</a>
          <a href="/lang/en" class="lang-btn <%= t.lang === 'en' ? 'active' : '' %>">EN</a>
          <a href="/lang/es" class="lang-btn <%= t.lang === 'es' ? 'active' : '' %>">ES</a>
          <a href="/lang/de" class="lang-btn <%= t.lang === 'de' ? 'active' : '' %>">DE</a>
        </div>
        <% if (user) { %>
          <a href="/" class="btn btn-ghost btn-sm"><%= t.help_back_app %></a>
        <% } else { %>
          <a href="/login" class="btn btn-ghost btn-sm"><%= t.login_submit %></a>
        <% } %>
      </div>
    </div>
  </nav>

  <main class="help-main">
    <div class="help-breadcrumb">
      <a href="/help"><%= t.help_title %></a>
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m9 18 6-6-6-6"/></svg>
      <span><%= t.help_submit_title %></span>
    </div>

    <% if (success) { %>
      <!-- Success State -->
      <div class="help-submit-success">
        <div class="success-icon">✅</div>
        <h1><%= t.help_submit_success %></h1>
        <p><%= t.help_submit_success_text %></p>
        <div class="ticket-ref-display">
          <span class="ticket-ref-label"><%= t.help_submit_ref %></span>
          <span class="ticket-ref-value"><%= ticketRef %></span>
        </div>
        <p class="text-muted"><%= t.help_submit_success_email %></p>
        <div class="success-actions">
          <a href="/help" class="btn btn-ghost"><%= t.help_back_home %></a>
          <a href="/help/submit" class="btn btn-primary"><%= t.help_submit_another %></a>
        </div>
      </div>
    <% } else { %>
      <!-- Submit Form -->
      <div class="help-submit-form">
        <div class="help-submit-header">
          <h1><%= t.help_submit_title %></h1>
          <p><%= t.help_submit_subtitle %></p>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-error" style="margin-bottom:1rem">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></svg>
            <%= error %>
          </div>
        <% } %>

        <form method="POST" action="/help/submit" class="form-card">
          <div class="form-row">
            <div class="form-group">
              <label for="client_name"><%= t.help_submit_name %> *</label>
              <input type="text" id="client_name" name="client_name" required
                     placeholder="<%= t.help_submit_name_placeholder %>">
            </div>
            <div class="form-group">
              <label for="client_email"><%= t.help_submit_email %> *</label>
              <input type="email" id="client_email" name="client_email" required
                     placeholder="<%= t.help_submit_email_placeholder %>">
            </div>
          </div>

          <div class="form-group">
            <label for="subject"><%= t.help_submit_subject %> *</label>
            <input type="text" id="subject" name="subject" required
                   placeholder="<%= t.help_submit_subject_placeholder %>">
          </div>

          <div class="form-group">
            <label for="category"><%= t.label_category %></label>
            <select id="category" name="category">
              <option value="general"><%= t.cat_general %></option>
              <option value="bug"><%= t.cat_bug %></option>
              <option value="question"><%= t.cat_question %></option>
              <option value="feature_request"><%= t.cat_feature_request %></option>
              <option value="account"><%= t.cat_account %></option>
              <option value="billing"><%= t.cat_billing %></option>
              <option value="other"><%= t.cat_other %></option>
            </select>
          </div>

          <div class="form-group">
            <label for="description"><%= t.help_submit_description %> *</label>
            <textarea id="description" name="description" rows="6" required
                      placeholder="<%= t.help_submit_desc_placeholder %>"></textarea>
          </div>

          <div class="form-actions">
            <a href="/help" class="btn btn-ghost"><%= t.cancel %></a>
            <button type="submit" class="btn btn-primary">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg>
              <%= t.help_submit_btn %>
            </button>
          </div>
        </form>

        <!-- FAQ Suggestion -->
        <div class="help-submit-faq-hint">
          <p><%= t.help_submit_faq_hint %></p>
          <a href="/help"><%= t.help_submit_browse_faq %></a>
        </div>
      </div>
    <% } %>
  </main>

  <footer class="help-footer">
    <p>© <%= new Date().getFullYear() %> ProjectHub — <%= t.help_footer %></p>
  </footer>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/livechat.js"></script>
</body>
</html>
