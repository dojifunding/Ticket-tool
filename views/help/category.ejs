<!DOCTYPE html>
<html lang="<%= t.lang %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= category.displayName %> â€” <%= t.help_title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/help.css">
  <link rel="stylesheet" href="/css/livechat.css">
</head>
<body class="help-body">
  <nav class="help-nav">
    <div class="help-nav-inner">
      <a href="/help" class="help-logo">
        <div class="logo-icon">P</div>
        <span><%= t.help_title %></span>
      </a>
      <div class="help-nav-actions">
        <a href="/help/submit" class="btn btn-primary btn-sm"><%= t.help_submit_nav %></a>
        <div class="lang-toggle lang-toggle-multi">
          <a href="/lang/fr" class="lang-btn <%= t.lang === 'fr' ? 'active' : '' %>">FR</a>
          <a href="/lang/en" class="lang-btn <%= t.lang === 'en' ? 'active' : '' %>">EN</a>
          <a href="/lang/es" class="lang-btn <%= t.lang === 'es' ? 'active' : '' %>">ES</a>
          <a href="/lang/de" class="lang-btn <%= t.lang === 'de' ? 'active' : '' %>">DE</a>
        </div>
        <% if (user) { %>
          <a href="/" class="btn btn-ghost btn-sm"><%= t.help_back_app %></a>
        <% } else { %>
          <a href="/login" class="btn btn-ghost btn-sm"><%= t.login_submit %></a>
        <% } %>
      </div>
    </div>
  </nav>

  <main class="help-main">
    <div class="help-breadcrumb">
      <a href="/help"><%= t.help_title %></a>
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m9 18 6-6-6-6"/></svg>
      <span><%= category.displayName %></span>
    </div>

    <div class="help-category-header">
      <span class="help-cat-icon-lg"><%= category.icon %></span>
      <h1><%= category.displayName %></h1>
      <p><%= articles.length %> <%= t.help_articles %></p>
    </div>

    <% if (articles.length > 0) { %>
      <div class="help-results-list">
        <% articles.forEach(article => { %>
          <a href="/help/article/<%= article.slug %>" class="help-result-item">
            <h3><%= article.displayTitle %></h3>
            <p><%= article.displayExcerpt || '' %></p>
            <% if (!article.is_public) { %><span class="help-private-badge">ðŸ”’ <%= t.help_staff_only %></span><% } %>
          </a>
        <% }) %>
      </div>
    <% } else { %>
      <div class="help-empty">
        <h3><%= t.help_no_articles %></h3>
        <a href="/help" class="btn btn-ghost"><%= t.help_back_home %></a>
      </div>
    <% } %>
  </main>

  <footer class="help-footer">
    <p>Â© <%= new Date().getFullYear() %> ProjectHub â€” <%= t.help_footer %></p>
  </footer>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/livechat.js"></script>
</body>
</html>
