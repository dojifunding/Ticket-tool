<% const base = typeof helpBase !== 'undefined' ? helpBase : '/help'; %>
<% const companyName = (typeof company !== 'undefined' && company) ? company.name : (typeof tenant !== 'undefined' && tenant) ? tenant.name : 'ProjectHub'; %>
<% const companyColor = (typeof brandColor !== 'undefined') ? brandColor : (typeof tenant !== 'undefined' && tenant && tenant.brand_color) ? tenant.brand_color : '#6366f1'; %>
<% const companyLogo = (typeof company !== 'undefined' && company && company.logo_url) ? company.logo_url : (typeof tenant !== 'undefined' && tenant && tenant.logo_url) ? tenant.logo_url : ''; %>
<!DOCTYPE html>
<html lang="<%= t.lang %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> â€” <%= companyName %></title>
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/help.css">
  <link rel="stylesheet" href="/css/livechat.css">
  <% if (companyColor !== '#6366f1') { %>
  <style>:root { --primary: <%= companyColor %>; --primary-dark: <%= companyColor %>; --primary-light: <%= companyColor %>18; }</style>
  <% } %>
</head>
<body class="help-body">
  <nav class="help-nav">
    <div class="help-nav-inner">
      <a href="<%= base %>" class="help-logo">
        <% if (companyLogo) { %>
          <img src="<%= companyLogo %>" alt="<%= companyName %>" style="width:30px;height:30px;border-radius:6px;object-fit:contain">
        <% } else { %>
          <div class="logo-icon" <% if (companyColor !== '#6366f1') { %>style="background:<%= companyColor %>"<% } %>><%= companyName.charAt(0).toUpperCase() %></div>
        <% } %>
        <span><%= companyName %> â€” <%= t.help_title %></span>
      </a>
      <div class="help-nav-actions">
        <a href="<%= base %>/submit" class="btn btn-primary btn-sm"><%= t.help_submit_nav %></a>
        <a href="<%= base %>/my-tickets" class="btn btn-ghost btn-sm">ðŸ“‹ Mes demandes</a>
        <div class="lang-toggle lang-toggle-multi">
          <a href="/lang/fr" class="lang-btn <%= t.lang === 'fr' ? 'active' : '' %>">FR</a>
          <a href="/lang/en" class="lang-btn <%= t.lang === 'en' ? 'active' : '' %>">EN</a>
          <a href="/lang/es" class="lang-btn <%= t.lang === 'es' ? 'active' : '' %>">ES</a>
          <a href="/lang/de" class="lang-btn <%= t.lang === 'de' ? 'active' : '' %>">DE</a>
        </div>
        <% if (user) { %>
          <a href="/" class="btn btn-ghost btn-sm"><%= t.help_back_app %></a>
        <% } else { %>
          <a href="/login" class="btn btn-ghost btn-sm"><%= t.login_submit %></a>
        <% } %>
      </div>
    </div>
  </nav>

  <header class="help-hero">
    <h1><%= t.help_hero_title %></h1>
    <p><%= t.help_hero_subtitle %></p>
    <form action="<%= base %>/search" method="GET" class="help-search-form">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
      <input type="text" name="q" placeholder="<%= t.help_search_placeholder %>" autofocus autocomplete="off">
      <button type="submit" class="btn btn-primary"><%= t.help_search_btn %></button>
    </form>
  </header>

  <main class="help-main">
    <section class="help-categories">
      <% categories.forEach(cat => { %>
        <a href="<%= base %>/category/<%= cat.slug %>" class="help-category-card">
          <div class="help-cat-icon"><%= cat.icon %></div>
          <h3><%= cat.displayName %></h3>
          <span class="help-cat-count"><%= cat.article_count %> <%= t.help_articles %></span>
        </a>
      <% }) %>
    </section>

    <% if (popular.length > 0) { %>
      <section class="help-popular">
        <h2><%= t.help_popular %></h2>
        <div class="help-article-grid">
          <% popular.forEach(article => { %>
            <a href="<%= base %>/article/<%= article.slug %>" class="help-article-card">
              <span class="help-article-cat"><%= article.displayCategory %></span>
              <h3><%= article.displayTitle %></h3>
              <p><%= article.displayExcerpt || '' %></p>
              <% if (!article.is_public) { %><span class="help-private-badge">ðŸ”’ <%= t.help_staff_only %></span><% } %>
            </a>
          <% }) %>
        </div>
      </section>
    <% } %>

    <section class="help-contact">
      <h2><%= t.help_contact_title %></h2>
      <p><%= t.help_contact_text %></p>
      <a href="<%= base %>/submit" class="btn btn-primary"><%= t.help_contact_btn %></a>
    </section>
  </main>

  <footer class="help-footer">
    <p>Â© <%= new Date().getFullYear() %> <%= companyName %> â€” <%= t.help_footer %></p>
  </footer>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/livechat.js"></script>
</body>
</html>
